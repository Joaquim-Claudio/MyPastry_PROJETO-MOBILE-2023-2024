<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="370dp"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="24dp"
        android:layout_marginVertical="16dp"
        android:background="@drawable/admin_order_background"
        android:paddingTop="22dp"
        android:paddingBottom="30dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/constraintLayout11"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="70dp"
            android:paddingHorizontal="5dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/constraintLayout22"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:background="@drawable/order_number_background"
                android:paddingHorizontal="70dp"
                android:paddingVertical="5dp"
                app:layout_constraintEnd_toEndOf="@+id/admin_order_type_textView"
                app:layout_constraintStart_toStartOf="@+id/admin_order_type_imageView"
                app:layout_constraintTop_toBottomOf="@+id/admin_order_type_imageView">

                <TextView
                    android:id="@+id/admin_order_id_textView"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textAlignment="center"
                    android:textColor="#FFFAB2"
                    android:textSize="20sp"
                    android:textStyle="bold"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    tools:text="0035" />
            </androidx.constraintlayout.widget.ConstraintLayout>

            <ImageView
                android:id="@+id/admin_order_type_imageView"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:src="@drawable/fast_delivery_icon"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/admin_order_type_textView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="20dp"
                android:textSize="22sp"
                android:textStyle="bold"
                app:layout_constraintBottom_toBottomOf="@+id/admin_order_type_imageView"
                app:layout_constraintStart_toEndOf="@+id/admin_order_type_imageView"
                app:layout_constraintTop_toTopOf="@+id/admin_order_type_imageView"
                tools:text="Pedido Mobile" />
        </androidx.constraintlayout.widget.ConstraintLayout>

        <View
            android:id="@+id/divider4"
            android:layout_width="0dp"
            android:layout_height="4dp"
            android:layout_marginTop="16dp"
            android:background="?android:attr/listDivider"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/constraintLayout11" />

        <TextView
            android:id="@+id/admin_order_prod_1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="24dp"
            android:textSize="18sp"
            android:textStyle="italic"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/divider4"
            tools:text="Pastel de Queijo:     x5" />

        <TextView
            android:id="@+id/admin_order_prod_2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="24dp"
            android:textSize="18sp"
            android:textStyle="italic"
            app:layout_constraintEnd_toEndOf="@+id/admin_order_prod_1"
            app:layout_constraintStart_toStartOf="@+id/admin_order_prod_1"
            app:layout_constraintTop_toBottomOf="@+id/admin_order_prod_1"
            tools:text="Coca-Cola:     x3" />

        <TextView
            android:id="@+id/admin_order_prod_3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="24dp"
            android:textSize="18sp"
            android:textStyle="italic"
            app:layout_constraintEnd_toEndOf="@+id/admin_order_prod_2"
            app:layout_constraintStart_toStartOf="@+id/admin_order_prod_2"
            app:layout_constraintTop_toBottomOf="@+id/admin_order_prod_2"
            tools:text="Caldo de Cana:     x2" />

        <TextView
            android:id="@+id/admin_order_prod_4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="24dp"
            android:textSize="18sp"
            android:textStyle="italic"
            app:layout_constraintEnd_toEndOf="@+id/admin_order_prod_3"
            app:layout_constraintStart_toStartOf="@+id/admin_order_prod_3"
            app:layout_constraintTop_toBottomOf="@+id/admin_order_prod_3"
            tools:text="Mousse de Lima:     x1" />

        <Button
            android:id="@+id/admin_order_update_button"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="24dp"
            android:layout_marginTop="16dp"
            android:paddingVertical="8dp"
            android:textSize="18sp"
            android:textStyle="bold"
            app:backgroundTint="@color/button_color_green"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/admin_order_prod_4"
            tools:text="PRONTO" />

    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.constraintlayout.widget.ConstraintLayout>