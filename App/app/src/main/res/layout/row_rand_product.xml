<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="24dp"
    android:paddingHorizontal="20dp"
    android:paddingVertical="5dp">

    <ImageView
        android:id="@+id/rand_imageView"
        android:layout_width="0dp"
        android:layout_height="170dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/hot_dog_promo" />

    <TextView
        android:id="@+id/rand_name_texView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:text="Cachorro Quente"
        android:textSize="22sp"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="@+id/rand_imageView"
        app:layout_constraintTop_toBottomOf="@+id/rand_imageView" />


    <ImageView
        android:id="@+id/imageView15"
        android:layout_width="25dp"
        android:layout_height="25dp"
        app:layout_constraintBottom_toTopOf="@+id/rand_delivery_cost"
        app:layout_constraintStart_toEndOf="@+id/rand_name_texView"
        app:layout_constraintTop_toTopOf="@+id/rand_name_texView"
        app:srcCompat="@drawable/verified_icon" />

    <TextView
        android:id="@+id/rand_price"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="5.00€"
        android:textColor="@color/light_text"
        android:textSize="18sp"
        android:textStyle=""
        app:layout_constraintStart_toStartOf="@+id/rand_name_texView"
        app:layout_constraintTop_toBottomOf="@+id/rand_name_texView" />

    <TextView
        android:id="@+id/textView34"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="5dp"
        android:text="\u25cf"
        android:textColor="@color/light_text"
        android:textSize="10sp"
        app:layout_constraintBottom_toBottomOf="@+id/rand_price"
        app:layout_constraintStart_toEndOf="@+id/rand_price"
        app:layout_constraintTop_toTopOf="@+id/rand_price" />

    <TextView
        android:id="@+id/rand_delivery_cost"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="5dp"
        android:text="Taxa de entrega:  €1.03"
        android:textColor="@color/light_text"
        android:textSize="18sp"
        app:layout_constraintStart_toEndOf="@+id/textView34"
        app:layout_constraintTop_toBottomOf="@+id/rand_name_texView" />

    <TextView
        android:id="@+id/textView31"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="5dp"
        android:text="\u25CF"
        android:textColor="@color/light_text"
        android:textSize="10sp"
        app:layout_constraintBottom_toBottomOf="@+id/rand_delivery_cost"
        app:layout_constraintStart_toEndOf="@+id/rand_delivery_cost"
        app:layout_constraintTop_toTopOf="@+id/rand_delivery_cost" />

    <TextView
        android:id="@+id/rand_time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="5dp"
        android:text="10 min"
        android:textColor="@color/light_text"
        android:textSize="18sp"
        app:layout_constraintBottom_toBottomOf="@+id/textView31"
        app:layout_constraintStart_toEndOf="@+id/textView31"
        app:layout_constraintTop_toTopOf="@+id/textView31" />


</androidx.constraintlayout.widget.ConstraintLayout>